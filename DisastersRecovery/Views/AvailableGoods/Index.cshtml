@model IEnumerable<DisastersRecovery.Models.AvailableGoods>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h1-Monetary"> Goods Available </h1>

<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityUsed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityUsed)
            </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-edit">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class=" btn btn-details">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-delete">Delete</a>
                    </td>
                }
        </tr>
}
    </tbody>
</table>
