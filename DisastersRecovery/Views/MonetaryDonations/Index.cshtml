@model IEnumerable<DisastersRecovery.Models.MonetaryDonation>

@{
    ViewData["Title"] = "Index";
}

<h1 class="h1-Monetary">Monetary Donations List</h1>

<div class="center-btn">
    <a asp-action="Create" class="btn btn-header">Donate Funds</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DonorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAnonymous)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DonorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAnonymous)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonationDate)
            </td>
            <td>
                    @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> *@
                    @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> | *@
                    @* <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@

                    <a asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-edit">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class=" btn btn-details">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-delete">Delete</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
