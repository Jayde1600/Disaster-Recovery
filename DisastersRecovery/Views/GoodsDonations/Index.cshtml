@model IEnumerable<DisastersRecovery.Models.GoodsDonation>

@{
    ViewData["Title"] = "Index";
}

<h1 class="h1-Monetary">Goods Donations List</h1>

<div class="center-btn">
    <a asp-action="Create" class="btn btn-header">Donate Goods</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DonorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfItems)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsAnonymous)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DonorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfItems)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAnonymous)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonationDate)
            </td>

                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class=" btn btn-edit">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id" class=" btn btn-details">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-delete">Delete</a>
                    </td>
                }
        </tr>
}
    </tbody>
</table>
